extends ../layouts/public

block content
  .container.mt-5
    h1.text-center GALERÍA DEL OX
    p.text-center.text-muted Esta es la página de inicio cargada correctamente.

    h2.mt-5.text-primary Obras (test)
    ul
      if artworks && artworks.length
        each art in artworks
          li #{art.title} - #{art.artist.name}
      else
        li.text-muted No hay obras disponibles.

    h2.mt-5.text-primary Artistas (test)
    ul
      if artists && artists.length
        each artist in artists
          li #{artist.name}
      else
        li.text-muted No hay artistas disponibles.

    h2.mt-5.text-primary Exhibiciones (test)
    ul
      if exhibitions && exhibitions.length
        each ex in exhibitions
          li #{ex.name}
      else
        li.text-muted No hay exhibiciones disponibles.
