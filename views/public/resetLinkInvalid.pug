extends ../layouts/public

block content
  .container.reset-password-container
    .row.justify-content-center
      .col-md-6.col-lg-5
        .d-flex.align-items-start.py-4(style="min-height:80vh;")
          main.form-signin.w-100.m-auto.font-title
            img.mb-4.logo-reset.mb-3(src="/Logos/GOX_LOGO_01.png", alt="Logo", width="72", height="57")
            h1.h3.mb-3.fw-normal.text-center Enlace no válido
            .alert.alert-danger.mb-3.text-center
              | El enlace de restablecimiento es inválido, ya venció o ya fue utilizado.
            .d-grid.gap-2
              a.btn.btn-primary(href="/forgot-password") Solicitar un nuevo enlace
              a.btn.btn-outline-primary.ox-back-btn(href="/login") Volver
