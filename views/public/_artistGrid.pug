//- Grid de artistas estilo Bootstrap
.container.mt-5.mb-5
  .row.row-cols-1.row-cols-sm-2.row-cols-md-3.g-3
    each artist in artists
      .col
        .card.shadow-sm.h-100.position-relative.artist-card
          // Full-card click target (place first for reliability)
          a.stretched-link(href=`/artists/${artist._id}` aria-label=`Ver perfil de ${artist.name}`)
          .artist-image-container.position-relative
            if artist.profileImage
              img.artist-image(src=artist.profileImage, alt=artist.name, style="height: 300px; width: 100%; object-fit: cover;")
            else
              .artist-placeholder.d-flex.align-items-center.justify-content-center(style="height: 300px; background: linear-gradient(135deg, #55595c 0%, #6c757d 100%);")
                .text-center
                  i.fas.fa-user.fa-3x.text-white.mb-2
                  .text-white.small No image
            
            // Overlay con informaci√≥n del artista
            .artist-overlay.position-absolute.bottom-0.start-0.end-0.p-3
              .artist-info.text-white
                h5.artist-name.fw-bold.mb-1= artist.name
                if artist.createdAt
                  .artist-member-since.small.opacity-75= `Miembro desde ${new Date(artist.createdAt).getFullYear()}`
