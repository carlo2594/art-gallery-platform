// views/public/artworks/_artworkPagination.pug
// Requiere: page, totalPages, q
if typeof page !== 'undefined' && typeof totalPages !== 'undefined' && totalPages > 1
  nav.mt-4(aria-label='Paginación de obras')
    ul.pagination.justify-content-center
      - const prevDisabled = page <= 1
      - const nextDisabled = page >= totalPages
      li.page-item(class=prevDisabled ? 'disabled' : '')
        a.page-link(href=`?page=${page-1}` aria-label='Anterior') Anterior
      li.page-item.disabled
        span.page-link= `Página ${page} de ${totalPages}`
      li.page-item(class=nextDisabled ? 'disabled' : '')
        a.page-link(href=`?page=${page+1}` aria-label='Siguiente') Siguiente

