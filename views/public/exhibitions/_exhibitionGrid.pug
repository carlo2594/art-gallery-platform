//- Grid de exposiciones estilo card-overlay Bootstrap

//- Si exhibitions es un array, mostrar cada una como hero compacto
if Array.isArray(exhibitions)
  if exhibitions.length
    each expo, idx in exhibitions
      - const eager = idx < 2
      - const detailUrl = `/exhibitions/${expo.slug || expo._id}`
      section.article-template.exhibition-section
        a.exhibition-card-link.d-block.text-decoration-none(href=detailUrl aria-label=`See details of ${expo.title}`)
          .article-template__hero-container.exhibition-hero-container.position-relative.reveal-item
            .article-template__hero-adapt.media.exhibition-hero-adapt
              if expo.coverImage
                img.exhibition-hero-image.exhibition-hero-img-absolute.shadow-lg.exhibition-grid__image(
                  src=expo.coverImage,
                  alt=expo.title,
                  loading=eager ? 'eager' : 'lazy',
                  fetchpriority=eager ? 'high' : 'low',
                  decoding='async'
                )
              else
                .exhibition-placeholder.d-flex.align-items-center.justify-content-center.exhibition-grid__placeholder
                  .text-center
                    i.fas.fa-image.fa-4x.text-white.mb-3
                    .text-white.h5 No image
            .exhibition-overlay.position-absolute.bottom-0.start-0.end-0.p-3
              .exhibition-info.text-white
                h2.exhibition-title.fw-bold.mb-2.exhibition-grid__title= expo.title
                if expo.startDate && expo.endDate
                  .d-flex.align-items-center.mb-1
                    i.fas.fa-calendar-alt.me-2.text-warning.exhibition-grid__meta-icon
                    span.small.mb-0.exhibition-grid__meta-text= `Of the ${new Date(expo.startDate).toLocaleDateString()} al ${new Date(expo.endDate).toLocaleDateString()}`
                if expo.location && expo.location.type
                  .d-flex.align-items-center.mb-1
                    if expo.location.type === 'physical' && expo.location.address
                      i.fas.fa-map-marker-alt.me-2.text-danger.exhibition-grid__meta-icon
                      span.small.mb-0.exhibition-grid__meta-text= expo.location.address
                    else if expo.location.type === 'virtual' && expo.location.url
                      i.fas.fa-globe.me-2.text-info.exhibition-grid__meta-icon
                      span.small.mb-0.exhibition-grid__meta-text Virtual Exhibition
                if expo.description
                  - const desc = expo.description.length > 160 ? expo.description.slice(0, 160) + 'â€¦' : expo.description;
                  p.exhibition-description.mb-0.exhibition-grid__description= desc
  else
    .container-xxl.py-5
      .row.justify-content-center
        .col-lg-8.text-center
          h3.h4.mb-2 There are no exposures that match your filters
          p.text-muted.mb-4 Try adjusting the date range, type or
            |  
            a(href=typeof actionUrl !== 'undefined' ? actionUrl : '/exhibitions') clean the filters
          .d-grid.gap-3
            .skeleton.skeleton-hero
            .skeleton.skeleton-hero
            .skeleton.skeleton-hero
