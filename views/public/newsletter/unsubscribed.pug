extends /layouts/public

block content
  main.main-content
    section.py-5.min-vh-70.newsletter-unsubscribed-section
      .container
        .row.justify-content-center
          .col-md-6.text-center
            .card.shadow-sm.border-0
              .card-body.p-5
                i.fas.fa-check-circle.fa-3x.text-success.mb-4
                h1.h3.fw-bold.mb-3.newsletter-unsubscribed-heading You have unsubscribed
                p.lead.text-muted.mb-4= messages || 'You have been successfully removed from our newsletter'
                .mb-4
                  p.small.text-muted You will no longer receive promotional emails from us.
                  p.small.text-muted If you changed your mind, you can subscribe again at any time.
                .d-grid.gap-2.d-md-block
                  a.btn.btn-outline-primary.rounded-pill.px-4.ox-back-btn(href="/") Return
                  a.btn.btn-outline-primary.rounded-pill.px-4.ms-md-2(href="/artworks") See works
    section.py-4.bg-light
      .container
        .row.justify-content-center
          .col-md-8.text-center
            h5.mb-3 Can you help us improve?
            p.small.text-muted Could you tell us why you unsubscribed? (Optional)
            .d-flex.flex-wrap.justify-content-center.gap-2
              .badge.bg-light.text-dark.border.px-3.py-2.feedback-option Too many emails
              .badge.bg-light.text-dark.border.px-3.py-2.feedback-option Irrelevant content
              .badge.bg-light.text-dark.border.px-3.py-2.feedback-option I'm not interested in art anymore
              .badge.bg-light.text-dark.border.px-3.py-2.feedback-option another reason

