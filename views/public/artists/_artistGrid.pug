//- Grid de artistas estilo Bootstrap
.container.mt-5.mb-5
  .row.row-cols-1.row-cols-sm-2.row-cols-md-3.g-3
    each artist, idx in artists
      - const eager = idx < 4
      .col
        .card.shadow-sm.h-100.position-relative.artist-card.reveal-item
          // Usar ID para que el backend canonicÃ© al slug actual
          a.stretched-link(href=`/artists/${artist._id}` aria-label=`Ver perfil de ${artist.name}`)
          .artist-image-container.position-relative
            - const artistCover = artist.coverImage || artist.profileImage
            if artistCover
              img.artist-image.artist-grid-img(
                src=artistCover,
                alt=artist.name,
                loading=eager ? 'eager' : 'lazy',
                fetchpriority=eager ? 'high' : 'low',
                decoding='async',
              )
            else
              .artist-placeholder.artist-placeholder--grid.d-flex.align-items-center.justify-content-center
                .text-center
                  i.fas.fa-user.fa-3x.text-white.mb-2
                  .text-white.small No image
            .artist-overlay.position-absolute.bottom-0.start-0.end-0.p-3
              .artist-info.text-white
                h5.artist-name.fw-bold.mb-1= artist.name
                .d-flex.justify-content-between.align-items-center
                  if artist.createdAt
                    .artist-member-since.small.opacity-75= `Miembro desde ${new Date(artist.createdAt).getFullYear()}`
                  if artist.approvedArtworksCount
                    .artist-artworks-count.small.opacity-85
                      i.fas.fa-palette.me-1
                      span= `${artist.approvedArtworksCount} obra${artist.approvedArtworksCount !== 1 ? 's' : ''}`
