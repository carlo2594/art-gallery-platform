// Modal: Editar portada
.modal.fade#artistCoverModal(tabindex='-1' aria-labelledby='artistCoverModalLabel' aria-hidden='true')
  .modal-dialog
    .modal-content
      .modal-header
        h5.modal-title#artistCoverModalLabel Edit cover image
        button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
      .modal-body
        form#artistPanelCoverForm(action='/api/v1/users/me/cover-image' method='POST' enctype='multipart/form-data')
          .mb-3
            label.form-label New cover
            input#artistCoverInput.form-control(type='file', name='coverImage', accept='image/*', required)
            // Mensaje de error mostrado por JS
            small#artistCoverError.text-danger.mt-1.d-none
          .artist-cover-cropper.d-none#artistCoverCropWrapper
            img#artistCoverPreview.img-fluid.rounded(alt='Crop preview' decoding='async' loading='lazy')
          .artist-cover-helper.text-muted.small.mb-3
            strong Adjust the crop:Â 
            | Move and zoom the image to maintain a horizontal panoramic cover.
          small.text-muted.d-block.mb-2 Recommendation: use images at least 1600px wide for best quality.
          // Upload progress
          .progress.artist-cover-progress#artistCoverProgressWrap
            .progress-bar.artist-cover-progress-bar#artistCoverProgressBar(role='progressbar' aria-valuemin='0' aria-valuemax='100')
      .modal-footer
        button.btn.btn-secondary(type='button' data-bs-dismiss='modal') Cancel
        button.btn.btn-primary(type='submit' form='artistPanelCoverForm') Update cover
