// Modal: Editar portada
.modal.fade#artistCoverModal(tabindex='-1' aria-labelledby='artistCoverModalLabel' aria-hidden='true')
  .modal-dialog
    .modal-content
      .modal-header
        h5.modal-title#artistCoverModalLabel Editar imagen de portada
        button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Cerrar')
      .modal-body
        form#artistPanelCoverForm(action='/api/v1/users/me/cover-image' method='POST' enctype='multipart/form-data')
          .mb-3
            label.form-label Nueva portada
            input#artistCoverInput.form-control(type='file', name='coverImage', accept='image/*', required)
            // Inline error message for invalid orientation
            small#artistCoverError.text-danger.mt-1.d-none La imagen debe ser horizontal (más ancha que alta).
          small.text-muted.d-block.mb-2 Solo se permiten imágenes horizontales para la portada.
          // Upload progress
          .progress#artistCoverProgressWrap(style='height: 6px; display: none;')
            .progress-bar#artistCoverProgressBar(role='progressbar' style='width: 0%;' aria-valuemin='0' aria-valuemax='100')
      .modal-footer
        button.btn.btn-secondary(type='button' data-bs-dismiss='modal') Cancelar
        button.btn.btn-primary(type='submit' form='artistPanelCoverForm') Actualizar portada
