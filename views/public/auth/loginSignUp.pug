extends /layouts/public

block headExtra

block content
  .login-signin-container
    .row.g-0.align-items-stretch
      .col-12.col-lg
        .d-flex.align-items-center.py-4.login-signin-bg.min-vh-100
          .container-sm.login-form-narrow.px-3
            main.form-signin.w-100.m-auto.font-title.login-signin-main
              .login-signup-form-wrapper
                form.login-signin-form(
                  method="POST",
                  action= mode === 'signUp' ? "/api/v1/auth/signup" : "/api/v1/auth/login",
                  data-mode=mode
                )
                  a.navbar-brand.d-flex.align-items-center.navbar-logo-link.mb-4(href="/")
                    img.logo-navbar(src="/Logos/GOX_LOGO_06.png" alt="Ox Gallery")
                    h1.ms-1.text-uppercase.fw-bold.navbar-title Ox Gallery
                  if mode === 'signUp'
                    h1.h3.mb-3.fw-normal.mb-3.login-signin-title Register
                  else
                    h1.h3.mb-3.fw-normal.mb-3.login-signin-title Sign in

                  if error
                    .alert.alert-danger.mb-3.login-signin-error= error
                  if success
                    .alert.alert-success.mb-3.login-signin-success= success

                  if mode === 'signUp'
                    .form-floating.mb-3.login-signin-field
                      input.form-control.login-signin-input(type="text", id="floatingName", name="name", placeholder="Full name")
                      label.login-signin-label(for="floatingName") Full name

                  .form-floating.mb-3.login-signin-field
                    input.form-control.login-signin-input(type="email", id="floatingInput", name="email", placeholder="name@example.com", required)
                    label.login-signin-label(for="floatingInput") Email

                  if mode !== 'signUp'
                    .form-floating.mb-3.login-signin-field.ox-password-reveal
                      input.form-control.login-signin-input(type="password", id="floatingPassword", name="password", placeholder="Password", required)
                      label.login-signin-label(for="floatingPassword") Password
                      button.ox-password-reveal-toggle(type="button", aria-label="Show or hide password", aria-pressed="false", title="Show/hide")
                        i.fas.fa-eye-slash.ox-password-reveal-icon

                    .form-check.text-start.my-3.login-signin-remember
                      input.form-check-input.login-signin-checkbox(type="checkbox", value="remember-me", id="checkDefault", name="remember")
                      label.form-check-label.login-signin-checkbox-label(for="checkDefault") remember me
                    .text-center.mt-2.mb-2.login-forgot-container
                      a.login-forgot-page.btn.btn-link.text-decoration-none.fw-semibold(href="/forgot-password")
                        i.fas.fa-unlock-alt.me-2
                        span Forgot your password?

                  if mode === 'signUp'
                    button.btn.btn-primary.w-100.py-2.mt-3.mb-3.login-signin-btn(type="submit") Register
                  else
                    button.btn.btn-primary.w-100.py-2.mt-3.mb-4.login-signin-btn(type="submit") Login

                  .d-flex.justify-content-center.mb-3.login-signin-back
                    a.btn.btn-outline-primary.ox-back-btn.login-signin-back-link(href="/")
                      i.fas.fa-arrow-left.me-2
                      | Return

                  p.mt-5.mb-3.text-body-secondary.text-center.login-signin-copyright &copy; 2025 Ox Gallery

      .col-auto.d-none.d-lg-block.p-0.login-signin-img-col
        picture
          source(srcset="/img/loginSignUp.webp" type="image/webp")
          img.login-signin-side-img.login-signin-artwork(src="/img/loginSignUp.jpg" alt="Night Wisdom")
