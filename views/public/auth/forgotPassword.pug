extends /layouts/public

block headExtra
  - var hideNavbar = true
  - var hideFooter = true

block content
  .container.forgot-password-container
    .row.justify-content-center
      .col-md-6.col-lg-5
        .d-flex.align-items-center.py-4.min-vh-100
          main.form-signin.w-100.m-auto.font-title
            form#forgotForm(method="POST", action="/api/v1/auth/password/forgot")
              a.navbar-brand.d-flex.align-items-center.navbar-logo-link.mb-4(href="/")
                img.logo-navbar(src="/Logos/GOX_LOGO_06.png" alt="Ox Gallery")
                h1.ms-1.text-uppercase.fw-bold.navbar-title Ox Gallery
              h1.h3.mb-3.fw-normal.mb-3 Recover password

              if error
                .alert.alert-danger.mb-3= error
              if success
                .alert.alert-success.mb-3= success

              .form-floating.mb-3
                input.form-control(type="email", id="email", name="email", placeholder="name@example.com", required)
                label(for="email") Email

              button.btn.btn-primary.w-100.py-2.mt-1.mb-4(type="submit") Send reset link

              .d-flex.justify-content-center.mb-3
                a.btn.btn-outline-primary.ox-back-btn(href="/login")
                  i.fas.fa-arrow-left.me-2
                  | Return

              p.mt-5.mb-3.text-body-secondary.text-center &copy; 2025 Ox Gallery
