extends /layouts/public

block content
  section.contact-section.py-5
    .container
      .row.justify-content-center
        .col-lg-8
          h1.display-4.fw-bold.mb-4 Contact us
          if success
            .alert.alert-success(role='alert') Your message has been sent. We will reply to you soon.
          if error
            .alert.alert-danger(role='alert')= error
          p.lead.mb-4 If you have questions or want to contact Galer√≠a del Ox, write to us at our support email.

          .contact-info.mb-4
            span.contact-label Mail:
            a.contact-email-link(href="mailto:soporte@galeriadelox.com" aria-label="Send email to support@galeriadelox.com") soporte@galeriadelox.com

          h2.h5.mt-5.mb-3 Send us a message
          form(action="/api/v1/contact" method="POST")
            //- Honeypot anti-spam
            input.honeypot-field(type='text' name='company' tabindex='-1' autocomplete='off' aria-hidden='true')
            .mb-3
              label.form-label(for="name") Name
              input#name.form-control(type="text" name="name" required value=formData && formData.name)
            .mb-3
              label.form-label(for="email") Email
              input#email.form-control(type="email" name="email" required value=formData && formData.email)
            .mb-3
              label.form-label(for="message") Message
              textarea#message.form-control(name="message" rows="5" required)= (formData && formData.message) || ''
            button.btn.btn-primary(type="submit") Send message
