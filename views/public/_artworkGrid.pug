ul.grid.effect-2#grid.mb-5
  each a in artworks
    li
       .card.h-100.bg-white.border-0.shadow-none.art-card-shadow.position-relative
         a(href=`/artworks/${a.slug || a._id}` aria-label=`Ver obra: ${a.title || ''}`)
           img.card-img-top.art-card-shadow(src=a.imageUrl, alt=a.title)
         // Full-card stretched link so the info area is clickable too
         a.stretched-link(href=`/artworks/${a.slug || a._id}` aria-label=`Ver obra: ${a.title || ''}`)
         .card-body.p-3.art-label.art-card-shadow
           .artwork-flex-row.d-flex.flex-row.gap-3
             // --- Columna izquierda: Museo Card Block ---
             .museum-label.p-3.flex-grow-1.d-flex.flex-column.align-items-start
               if a.artist
                 .museum-artist.fw-bold.fs-5= a.artist.name
               if a.title
                 .museum-title.fs-6.mt-1= a.title
               if a.material
                 - var matCap = a.material.charAt(0).toUpperCase() + a.material.slice(1)
                 .museum-material.mt-1= matCap
               if a.completedAt
                 .museum-created.mt-1
                   | #{new Date(a.completedAt).toLocaleDateString('es-MX', { year: 'numeric', month: 'short', day: 'numeric' })}
               if typeof a.price_cents === 'number'
                 .museum-price.fw-bold.fs-5.mt-2
                   | $
                   = (a.price_cents/100).toLocaleString('en-US', {minimumFractionDigits:0})
             // --- Columna derecha: Meta info ---
             .artwork-meta.flex-grow-1.d-flex.flex-column.justify-content-between.align-items-end
               .artwork-meta-items.d-flex.flex-column.align-items-end.gap-2
                 if a.website
                   span.small.text-muted
                     i.fa.fa-globe.me-1
                     = a.website
                 if a.instagram
                   span.small.text-muted
                     i.fa.fa-instagram.me-1
                     | @
                     = a.instagram.replace(/^@/, '')
                 if typeof a.views === 'number'
                   span
                     i.fa.fa-eye.me-1.text-info
                     | #{a.views}
                 if typeof a.favoritesCount === 'number'
                   span
                     i.fa.fa-heart.me-1.text-danger
                     | #{a.favoritesCount}
                 if a.createdAt
                   span
                     i.fa.fa-calendar-plus.me-1.text-success
                     | Publicaci√≥n: #{new Date(a.createdAt).toLocaleDateString('es-MX', { year: 'numeric', month: 'short', day: 'numeric' })}
