extends ../layouts/public

block content
  .container.signin-container
    .row.justify-content-center
      .col-md-6.col-lg-5
        .d-flex.align-items-center.py-4(style="min-height:100vh;")
          main.form-signin.w-100.m-auto.font-title
            form(method="POST", action="/login")
              img.mb-4.logo-reset.mb-3(src="/Logos/GOX_LOGO_08.png", alt="Galería del Ox", width="72", height="57")
              h1.h3.mb-3.fw-normal.mb-3 Inicia sesión

              // Mensajes de error y éxito (puedes implementar lógica en el controller)
              if error
                .alert.alert-danger.mb-3= error
              if success
                .alert.alert-success.mb-3= success

              .form-floating.mb-3
                input.form-control(type="email", id="floatingInput", name="email", placeholder="name@example.com", required)
                label(for="floatingInput") Correo electrónico

              .form-floating.mb-3
                input.form-control(type="password", id="floatingPassword", name="password", placeholder="Contraseña", required)
                label(for="floatingPassword") Contraseña

              .form-check.text-start.my-3
                input.form-check-input(type="checkbox", value="remember-me", id="checkDefault", name="remember")
                label.form-check-label(for="checkDefault") Recuérdame

              button.btn.btn-primary.w-100.py-2.mt-3.mb-3(type="submit") Iniciar sesión

              .d-flex.justify-content-center.mb-3
                a.d-inline-block.px-2.py-1.fs-5.rounded-pill.border.border-2.text-ox-blue.text-decoration-none.transition(href="/")
                  i.fas.fa-arrow-left.me-2
                  | Volver al inicio

              p.mt-5.mb-3.text-body-secondary © 2025 Galería del Ox
