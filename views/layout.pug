//- views/layout.pug
doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title= title || 'Galería del Ox'
    link(rel="stylesheet", href="/css/bootstrap.min.css")
    link(rel="stylesheet", href="/css/styles.css")
    link(rel="preconnect", href="https://fonts.googleapis.com")
    link(rel="preconnect", href="https://fonts.gstatic.com" crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet")
    style.
      body {
        font-family: 'Inter', sans-serif;
      }
  body
    //- Navbar
    nav.navbar.navbar-expand-lg.navbar-light.bg-white.shadow-sm
      .container
        a.navbar-brand(href="/")
          img(src="/img/logo.svg", alt="Galería del Ox", height="32")
        button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarNav")
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav.ms-auto
            li.nav-item
              a.nav-link(href="/") Inicio
            li.nav-item
              a.nav-link(href="/galerias") Galerías
            li.nav-item
              a.nav-link(href="/artistas") Artistas
            li.nav-item
              a.nav-link(href="/contacto") Contacto

    //- Contenido principal
    main.container.mt-5
      block content

    //- Footer
    footer.bg-light.text-center.py-4.mt-5
      .container
        small.text-muted © 2025 Galería del Ox

    script(src="/js/bootstrap.bundle.min.js")
