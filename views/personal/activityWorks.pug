extends /layouts/public

block content
  .container.py-4
    .d-flex.align-items-center.justify-content-between.mb-4
      h2.mb-0 Artworks
      .btn-group( role='group' aria-label='Artworks filter')
        a.btn.btn-outline-secondary(href='/activity/works?tab=views' class= tab === 'views' ? 'active' : '') Recently viewed
        a.btn.btn-outline-secondary(href='/activity/works?tab=likes' class= tab === 'likes' ? 'active' : '') Your likes

    if artworks && artworks.length
      .container-xxl.artworks-flex
        .artworks-grid-paginate
          - var gridId = 'grid-activity-works'
          - var firstEagerCount = 2
          include /public/artworks/_artworkGrid.pug
          // Paginaci√≥n consistente con artworks/index
          include /public/artworks/_artworkPagination.pug
    else
      p.text-muted There are no artworks to show in this section.
