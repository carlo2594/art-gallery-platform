extends /layouts/admin

block content
  .container.py-5
    h1.h3.mb-4 Sales management
    if sales && sales.length
      .table-responsive
        table.table.table-striped.table-hover.align-middle
          thead
            tr
              th Work
              th Artist
              th State
              th Sold in
          tbody
            each s in sales
              tr
                td= s.title
                td= s.artist && s.artist.name
                td= s.availability
                td= s.soldAt ? new Date(s.soldAt).toLocaleDateString('es-ES') : 'â€”'
    else
      .alert.alert-info There are no sales

