extends /layouts/admin

block content
  .container.py-5
    if user
      h1.h3.mb-4= user.name
      .row
        .col-md-6
          dl
            dt Mail
            dd= user.email
            dt Roles
            dd
              - const roles = Array.isArray(user.roles) && user.roles.length ? user.roles : (user.role ? [user.role] : [])
              if roles.length
                each roleValue in roles
                  - const badgeClass = roleValue === 'admin' ? 'text-bg-danger' : (roleValue === 'artist' ? 'text-bg-success' : 'text-bg-secondary')
                  span.badge.me-1.text-uppercase(class=badgeClass)= roleValue
              else
                span.text-muted -- No roles --
            dt Asset
            dd= (user.active === false ? 'No' : 'Yes')
            dt Created
            dd= new Date(user.createdAt).toLocaleDateString('es-ES')
        .col-md-6
          if user.profileImage
            img.img-fluid.rounded(src=user.profileImage alt='profile photo')
    else
      .alert.alert-warning User not found

