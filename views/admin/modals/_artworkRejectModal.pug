// Modal para especificar motivo de rechazo
.modal.fade(id=`adminRejectArtwork-${a._id}` tabindex='-1' aria-labelledby=`adminRejectArtworkLabel-${a._id}` aria-hidden='true')
  .modal-dialog
    .modal-content
      .modal-header
        h5.modal-title(id=`adminRejectArtworkLabel-${a._id}`) Reject work - #{a.title}
        button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
      form.admin-reject-artwork-form(data-artwork-id=a._id data-edit-form-id=`adminEditArtworkForm-${a._id}`)
        .modal-body
          .mb-3
            label.form-label(for=`rejectReason-${a._id}`) Reason for rejection
            textarea.form-control(
              id=`rejectReason-${a._id}`
              name='reason'
              rows='4'
              placeholder='Clearly describe the reason...'
              required
              maxlength=(rejectReasonLimit || 100)
              data-reject-limit=(rejectReasonLimit || 100)
              data-reject-counter=`rejectCounter-${a._id}`
            )
            small.text-muted.mt-1
              span(id=`rejectCounter-${a._id}`)= rejectReasonLimit || 100
              |  available characters. The artist will be notified of this reason.
        .modal-footer
          button.btn.btn-secondary(type='button' data-bs-dismiss='modal') Cancel
          button.btn.btn-danger(type='submit') Confirm rejection
