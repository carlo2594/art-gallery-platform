// Modal: Crear nueva obra (solo admin)
.modal.fade#adminCreateArtwork(tabindex='-1' aria-labelledby='adminCreateArtworkLabel' aria-hidden='true')
  .modal-dialog.modal-lg
    .modal-content
      .modal-header
        h5.modal-title#adminCreateArtworkLabel Add work
        button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
      .modal-body
        form.admin-create-artwork-form#adminCreateArtworkForm(enctype='multipart/form-data')
          .row.g-3
            .col-md-8
              label.form-label title
              input.form-control(type='text', name='title', placeholder='Title of the work', required)
              .invalid-feedback.admin-artworks-title-error Required field
            .col-md-4
              label.form-label Precio (USD)
              input.form-control(type='number', name='price_usd', min='0', step='0.01', placeholder='0.00', required)
              .invalid-feedback.admin-artworks-price-error Enter a valid price
          .mb-3
            label.form-label Description
            textarea.form-control(name='description' rows='3' placeholder='Description (optional)')
          // Artista selector con búsqueda
          .mb-3
            label.form-label Artist
            input(type='hidden', name='artist')
            .position-relative
              input.form-control.admin-artworks-artist-search(type='text', placeholder='Search by name or email...')
              .invalid-feedback.admin-artworks-artist-error Select an artist from the list
              .list-group.position-absolute.w-100.mt-1.shadow.admin-artworks-artist-suggestions(style='z-index:1056; max-height: 220px; overflow:auto; display:none;')
            small.text-muted Select an artist from the list.
            .mt-2.admin-artworks-artist-selected.text-muted
          // Imagen principal
          .mb-3
            label.form-label Image of the work
            .d-flex.align-items-center.gap-3
              img.admin-artworks-image-preview.img-thumbnail(src='' alt='Preview' style='width:64px;height:64px;object-fit:cover;' hidden)
              .d-flex.flex-wrap.gap-2
                input.form-control.form-control-sm.admin-artworks-image-input(type='file', name='image', accept='image/*', required)
                button.btn.btn-sm.btn-primary.admin-artworks-image-upload-btn(type='button') Climb
                button.btn.btn-sm.btn-outline-danger.admin-artworks-image-remove-btn(type='button') Remove
            .invalid-feedback.admin-artworks-image-error You must upload an image
            small.text-muted.mt-1 Required. It will go up to save.
          // Técnica y medidas
          .row.g-3
            .col-md-4
              label.form-label Technique
              input.form-control(type='text', name='technique', placeholder='Oil, Acrylic, etc.')
            .col-md-2
              label.form-label Tall (cm)
              input.form-control(type='number', name='height_cm', min='0.01', step='0.01', required)
              .invalid-feedback.admin-artworks-height-error Enter a value greater than 0
            .col-md-2
              label.form-label Ancho (cm)
              input.form-control(type='number', name='width_cm', min='0.01', step='0.01', required)
              .invalid-feedback.admin-artworks-width-error Enter a value greater than 0
          .row.g-3
            .col-md-4
              label.form-label Date of work
              input.form-control(type='date', name='completedAt')
      .modal-footer
        button.btn.btn-secondary(type='button' data-bs-dismiss='modal') Cancel
        button.btn.btn-primary.admin-artworks-create-submit(type='submit' form='adminCreateArtworkForm') Create
