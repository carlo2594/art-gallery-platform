// Modal: Crear nueva obra (solo admin)
.modal.fade#adminCreateArtwork(tabindex='-1' aria-labelledby='adminCreateArtworkLabel' aria-hidden='true')
  .modal-dialog.modal-lg
    .modal-content
      .modal-header
        h5.modal-title#adminCreateArtworkLabel Agregar obra
        button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
      .modal-body
        form.admin-create-artwork-form#adminCreateArtworkForm(enctype='multipart/form-data')
          .row.g-3
            .col-md-8
              label.form-label Titulo
              input.form-control(type='text', name='title', placeholder='Titulo de la obra', required)
              .invalid-feedback.admin-artworks-title-error Campo requerido
            .col-md-4
              label.form-label Precio (USD)
              input.form-control(type='number', name='price_usd', min='0', step='0.01', placeholder='0.00', required)
              .invalid-feedback.admin-artworks-price-error Ingresa un precio valido
          .mb-3
            label.form-label Descripción
            textarea.form-control(name='description' rows='3' placeholder='Descripción (opcional)')
          // Artista selector con búsqueda
          .mb-3
            label.form-label Artista
            input(type='hidden', name='artist')
            .position-relative
              input.form-control.admin-artworks-artist-search(type='text', placeholder='Buscar por nombre o email...')
              .invalid-feedback.admin-artworks-artist-error Selecciona un artista de la lista
              .list-group.position-absolute.w-100.mt-1.shadow.admin-artworks-artist-suggestions(style='z-index:1056; max-height: 220px; overflow:auto; display:none;')
            small.text-muted Selecciona un artista de la lista.
            .mt-2.admin-artworks-artist-selected.text-muted
          // Imagen principal
          .mb-3
            label.form-label Imagen de la obra
            .d-flex.align-items-center.gap-3
              img.admin-artworks-image-preview.img-thumbnail(src='' alt='Preview' style='width:64px;height:64px;object-fit:cover;' hidden)
              .d-flex.flex-wrap.gap-2
                input.form-control.form-control-sm.admin-artworks-image-input(type='file', name='image', accept='image/*', required)
                button.btn.btn-sm.btn-primary.admin-artworks-image-upload-btn(type='button') Subir
                button.btn.btn-sm.btn-outline-danger.admin-artworks-image-remove-btn(type='button') Quitar
            .invalid-feedback.admin-artworks-image-error Debes subir una imagen
            small.text-muted.mt-1 Requerida. Se subirá a guardar.
          // Técnica y medidas
          .row.g-3
            .col-md-4
              label.form-label Tipo
              input.form-control(type='text', name='type', placeholder='Pintura, Escultura, etc.')
            .col-md-4
              label.form-label Tecnica
              input.form-control(type='text', name='technique', placeholder='Oleo, Acrilico, etc.')
            .col-md-2
              label.form-label Ancho (cm)
              input.form-control(type='number', name='width_cm', min='1', step='1', required)
              .invalid-feedback.admin-artworks-width-error Ingresa un valor mayor a 0
            .col-md-2
              label.form-label Alto (cm)
              input.form-control(type='number', name='height_cm', min='1', step='1', required)
              .invalid-feedback.admin-artworks-height-error Ingresa un valor mayor a 0
          .row.g-3
            .col-md-4
              label.form-label Fecha de la obra
              input.form-control(type='date', name='completedAt')
      .modal-footer
        button.btn.btn-secondary(type='button' data-bs-dismiss='modal') Cancelar
        button.btn.btn-primary.admin-artworks-create-submit(type='submit' form='adminCreateArtworkForm') Crear
